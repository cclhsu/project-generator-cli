	Ã§argo run

.PHONY: test
test:
	@echo "Test the project"
	cargo test

.PHONY: lint
lint:
	@echo "Lint the project"
	cargo clippy --fix

.PHONY: clean
clean:
	@echo "Clean the project"
    rm -rf $(TOP_DIR)/$(PROJECT_NAME)
    rm -rf $(TOP_DIR)/data/bin
    rm -rf $(TOP_DIR)/target
    rm -rf .git .gitignore Cargo.lock Cargo.toml